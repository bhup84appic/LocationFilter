<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />
            <solid android:color="@color/sale_progress_background" />
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <scale android:scaleWidth="100%">
            <shape>

                <gradient
                    android:centerColor="@color/sale_progress"
                    android:endColor="@color/sale_progress"
                    android:startColor="@color/sale_progress"
                    android:type="linear" />
                <corners android:radius="15dp" />

            </shape>
        </scale>
    </item>
</layer-list>